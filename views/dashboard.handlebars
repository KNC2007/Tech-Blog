<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Post:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-contents">Contents:</label>
        <textarea class="form-input" id="blog-contents" name="blog-contents"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Current Blog Posts:</h3>
    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      {{!-- delete blog post button --}}
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

{{!-- update button - update when logged in --}}
{{#if logged_in}}
  <button class="btn btn-primary" id="show-update-form">Update Blog</button>
  <form class="form update-blog-form" id="update-blog-form" style="display: none;">
    <div class="form-group">
      <label for="update-blog-title">Update Title:</label>
      <input class="form-input" type="text" id="update-blog-title" name="update-blog-title" />
    </div>
    <div class="form-group">
      <label for="update-blog-contents">Update Contents:</label>
      <textarea class="form-input" id="update-blog-contents" name="update-blog-contents"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
  </form>
{{/if}}




<script src="./js/blog.js"></script>

<script src="./js/dashboard.js"></script>